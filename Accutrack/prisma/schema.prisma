generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model income {
  id                    Int      @id @default(autoincrement())
  userId                String
  amount                Decimal
  description           String
  tag                   String?
  date                  DateTime
  deduct_from_inventory Boolean  @default(false)
  inventory_skuId       Int?
  inventory_qty         Int?
  tagName               String?
}

model expense {
  id          Int      @id @default(autoincrement())
  userId      String
  amount      Decimal
  description String
  tag         String?
  date        DateTime
  tagName     String?
}

model tag {  
  name     String    
  userId   String    @default("global")
  @@id([name, userId])
}

model inventory {
  skuId  Int    @id(map: "inventory_pk")
  name   String
  amount Int
}
