generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model income {
  id                    Int      @id @default(autoincrement())
  userId                String
  amount                Decimal
  description           String
  tag                   String?
  date                  DateTime
  deduct_from_inventory Boolean  @default(false)
  inventory_qty         Int?
  inventory_skuId       Int?
  tagName               String?
  taxRate     Decimal
  taxAmount   Decimal
}

model expense {
  id          Int      @id @default(autoincrement())
  userId      String
  amount      Decimal
  description String
  tag         String?
  date        DateTime
  tagName     String?
  taxRate     Decimal
  taxAmount   Decimal
}

model tag {
  name       String
  userId     String @default("global")
  expenseTag Int    @default(0)

  @@id([name, userId])
}

model inventory {
  id          Int     @id @default(autoincrement())
  skuId       Int
  userId      String
  name        String
  amount      Int
  category    String
  description String
  unitPrice   Decimal
}
